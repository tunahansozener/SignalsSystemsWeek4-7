%1

fprintf('Question 1 \n' );


x = 5;
y = 3;
result = x*y;
disp(['The value of the x is: ', num2str(x)]);
disp(['The value of the y is: ', num2str(y)]);
disp(['The value of the result is: ', num2str(result)]);

