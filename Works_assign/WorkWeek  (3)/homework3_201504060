%2
num1 = 10;
num2 = 3; 
sums = num1 + num2;
dif= num1 - num2;
mul = num1 * num2;
div = num1/ num2;


disp(['num1 + num2 = ', num2str(sums)]);
disp(['num1 - num2 = ', num2str(dif)]);
disp(['num1 * num2 = ', num2str(mul)]);
disp(['num1 / num2 = ', num2str(div)]);


